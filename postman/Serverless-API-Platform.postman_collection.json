{
"info": {
"name": "Serverless API Platform",
"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
"description": "Public health check and protected item routes for the Serverless API Platform. Set the API and TOKEN variables before sending."
},
"item": [
{
"name": "Health: /public",
"request": {
"method": "GET",
"header": [],
"url": {
"raw": "{{API}}/public",
"host": ["{{API}}"],
"path": ["public"]
}
}
},
{
"name": "Create item: POST /items",
"request": {
"method": "POST",
"header": [
{ "key": "Authorization", "value": "Bearer {{TOKEN}}" },
{ "key": "Content-Type", "value": "application/json" }
],
"body": {
"mode": "raw",
"raw": "{\n \"value\": \"hello-from-postman\"\n}"
},
"url": {
"raw": "{{API}}/items",
"host": ["{{API}}"],
"path": ["items"]
}
}
},
{
"name": "Get item: GET /items?id=...",
"request": {
"method": "GET",
"header": [
{ "key": "Authorization", "value": "Bearer {{TOKEN}}" }
],
"url": {
"raw": "{{API}}/items?id={{ITEM_ID}}",
"host": ["{{API}}"],
"path": ["items"],
"query": [
{ "key": "id", "value": "{{ITEM_ID}}" }
]
}
}
}
],
